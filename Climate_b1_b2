<body>
  <h2>❄️ Климат и природа Арктики (B1–B2)</h2>
  <p><strong>Выберите правильный ответ.</strong><br>
  Один верный ответ в каждом вопросе.</p>

  <form id="quizForm"></form>
  <button type="button" onclick="checkAnswers()">Проверить ответы</button>
  <div class="result" id="result"></div>
  <div style="height: 300px;"></div>

  <script>
    const questions = [
      { q: 'Какой климат преобладает в Арктике?', a: 'арктический', options: ['тропический', 'умеренный', 'арктический', 'пустынный'] },
      { q: 'Что такое вечная мерзлота?', a: 'слой земли, который всегда замёрзший', options: ['лёд, который появляется каждую зиму', 'вода, которая быстро замерзает', 'слой земли, который всегда замёрзший', 'снежная буря'] },
      { q: 'Почему в Арктике бывает полярная ночь?', a: 'потому что Солнце не поднимается над горизонтом', options: ['потому что много снега', 'потому что Солнце не поднимается над горизонтом', 'потому что зима длинная', 'потому что часто идут дожди'] },
      { q: 'Что происходит с морским льдом летом?', a: 'он тает', options: ['он растёт', 'он становится крепче', 'он тает', 'он меняет цвет'] },
      { q: 'Какое животное особенно зависит от морского льда?', a: 'белый медведь', options: ['белка', 'бурый медведь', 'белый медведь', 'заяц'] },
      { q: 'Почему таяние льда опасно для климата?', a: 'оно увеличивает температуру', options: ['оно делает воду чище', 'оно увеличивает температуру', 'оно улучшает жизнь животных', 'оно уменьшает уровень моря'] },
      { q: 'Какое растение чаще всего встречается в тундре?', a: 'мох', options: ['пальма', 'мох', 'ель', 'дуб'] },
      { q: 'Что такое айсберг?', a: 'большая масса льда в воде', options: ['лёд на дороге', 'гора в Арктике', 'подводная скала', 'большая масса льда в воде'] },
      { q: 'Где находится Северный полюс?', a: 'на льду в океане', options: ['на суше', 'на вершине горы', 'на льду в океане', 'в центре России'] },
      { q: 'Какая основная опасность для природы Арктики сегодня?', a: 'изменение климата', options: ['вулканы', 'загрязнение воздуха', 'туризм', 'изменение климата'] },
      { q: 'Какая страна НЕ имеет территории в Арктике?', a: 'Индия', options: ['Канада', 'Норвегия', 'Индия', 'Россия'] },
      { q: 'Что характерно для арктического лета?', a: 'короткое, холодное лето и полярный день', options: ['тёплая погода и много дождей', 'короткое, холодное лето и полярный день', 'длинное лето и жара', 'сильные ветры и грозы'] },
    ];

    const form = document.getElementById('quizForm');

    questions.forEach((item, i) => {
      const div = document.createElement('div');
      div.className = 'quiz-question';
      div.id = `q${i+1}-block`;
      div.innerHTML = `<h3>${i+1}. ${item.q}</h3>` +
        item.options.map(opt => `
          <label><input type="radio" name="q${i+1}" value="${opt}"> ${opt}</label><br>`).join('');
      form.appendChild(div);
    });

    function checkAnswers() {
      let score = 0;
      questions.forEach((item, i) => {
        const name = `q${i+1}`;
        const selected = form.querySelector(`input[name=${name}]:checked`);
        const block = document.getElementById(`${name}-block`);
        const existing = block.querySelector('.correct-answer');
        if (existing) existing.remove();
        const note = document.createElement('div');
        note.classList.add('correct-answer');

        if (selected && selected.value === item.a) {
          note.classList.add('correct');
          score++;
          note.innerText = `✅ Правильный ответ: ${item.a}`;
        } else {
          note.classList.add('incorrect');
          note.innerText = `❌ Правильный ответ: ${item.a}`;
        }

        block.appendChild(note);
      });
      document.getElementById('result').innerText = `Вы правильно ответили на ${score} из ${questions.length} вопросов.`;
    }
  </script>
</body>
</html>
